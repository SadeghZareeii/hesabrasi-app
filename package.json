{
  "name": "hesabrasi",
  "version": "4.2.0",
  "description": "Hesabrasi - desktop accounting for donors & recipients",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.hesabrasi.app",
    "productName": "Hesabrasi",
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    }
  },
  "devDependencies": {
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "moment-jalaali": "^0.10.4"
  }
}
